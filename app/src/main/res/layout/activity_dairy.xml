<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:id="@+id/Daily"
            android:textColor="#007500"
            android:textSize="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GrocerFood"
            android:text="Grocery Food"
            android:textColor="#007500"
            android:textSize="40dp"
            android:layout_marginStart="20dp"
            android:layout_below="@id/Daily"
            android:textStyle="bold"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popular"
        android:text="Popular Dairies"
        android:layout_below="@id/GrocerFood"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#007500"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/see_all_btn"
        android:text="See all"
        android:backgroundTint="#007500"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="25dp"
        android:layout_below="@id/GrocerFood"
        android:layout_alignParentRight="true"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/_shopping_cart_black"
        android:layout_alignParentRight="true"
        android:backgroundTint="#007500"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_below="@id/popular">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:id="@+id/firstiteam"
                    android:layout_marginStart="18dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="-25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/milk"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Milk"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹50.00/ltr."
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:id="@+id/seconditem"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="-25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ghee"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghee"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹325.00/kg."
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="200dp"
                android:id="@+id/thirditem"
                android:layout_marginStart="18dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="-25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/butter"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Butter"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="35dp"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹65.00/pack."
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="7dp"
                    android:textStyle="bold"/>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="165dp"
                android:layout_height="200dp"
                android:id="@+id/fourthitem"
                android:layout_below="@id/seconditem"
                android:layout_marginStart="15dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="-25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bread"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bread"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="35dp"
                    android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹50.00/pack"
                    android:textSize="25dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="7dp"
                    android:textStyle="bold"/>



            </androidx.cardview.widget.CardView>





        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@color/white">


                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:id="@+id/fifthitem"
                    android:layout_below="@id/firstiteam"
                    android:layout_marginStart="18dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="-25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/butter"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Butter"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹525.00/kg."
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:id="@+id/sixthitem"
                    android:layout_below="@id/seconditem"
                    android:layout_marginStart="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="130dp"
                        android:layout_marginTop="-25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/bread"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bread"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹65.00/pack"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>





            </LinearLayout>












        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/rounded_top_corner">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/fav_btn"
            android:background="@drawable/heart_box_outline" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/notify_btn"
            android:layout_marginStart="25dp"
            android:background="@drawable/notification_box" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/home_btn"
            android:layout_marginStart="25dp"
            android:background="@drawable/home_box" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cart_btn"
            android:layout_marginStart="25dp"
            android:background="@drawable/shopping_cart_box" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profile_btn"
            android:layout_marginStart="25dp"
            android:background="@drawable/profile_box" />




    </LinearLayout>




</RelativeLayout>



