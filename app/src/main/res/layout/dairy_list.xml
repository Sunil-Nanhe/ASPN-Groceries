<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily"
        android:id="@+id/Daily"
        android:textColor="#007500"
        android:textSize="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GrocerFood"
        android:text="Grocery Food"
        android:textColor="#007500"
        android:textSize="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/Daily"
        android:textStyle="bold"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popular"
        android:text="Popular Dairies"
        android:layout_below="@id/GrocerFood"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#007500"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/_shopping_cart_black"
        android:layout_alignParentRight="true"
        android:backgroundTint="#007500"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_below="@id/popular">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:id="@+id/milkcard"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="125dp"
                    android:background="@drawable/milk"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="MILK"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="55dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="₹50.00/ltr."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-29%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:id="@+id/gheecard"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="125dp"
                    android:background="@drawable/ghee"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="GHEE"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="55dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="₹325.00/kg."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-20%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:id="@+id/buttercard"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="130dp"
                    android:layout_marginStart="-10dp"
                    android:background="@drawable/butter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="BUTTER"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="55dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="₹65.00/pack."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-35%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="125dp"
                    android:background="@drawable/peanut_butter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="PEUNUT"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="55dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Butter"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_marginStart="235dp"
                    android:layout_marginTop="60dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="₹200.00/pack."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-25%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="125dp"
                    android:background="@drawable/bread"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="BREAD"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="55dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="₹50.00/pack."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-29%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="125dp"
                    android:background="@drawable/cheese"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="CHEES"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="55dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="₹75.00/pack."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-25%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="125dp"
                    android:background="@drawable/egg"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="EGG's"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="55dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="₹50.00/dozen."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-29%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/rounded_top_corner">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/fav_btn1"
            android:background="@drawable/heart_box_outline" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/notify_btn1"
            android:layout_marginStart="25dp"
            android:background="@drawable/notification_box" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/home_btn1"
            android:layout_marginStart="25dp"
            android:background="@drawable/home_box" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cart_btn1"
            android:layout_marginStart="25dp"
            android:background="@drawable/shopping_cart_box" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profile_btn1"
            android:layout_marginStart="25dp"
            android:background="@drawable/profile_box" />


    </LinearLayout>

</RelativeLayout>