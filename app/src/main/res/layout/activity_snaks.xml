<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily"
        android:id="@+id/Daily"
        android:textColor="#007500"
        android:textSize="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GrocerFood"
        android:text="Grocery Food"
        android:textColor="#007500"
        android:textSize="40dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/Daily"
        android:textStyle="bold"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popular"
        android:text="Popular Snaks"
        android:layout_below="@id/GrocerFood"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#007500"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/_shopping_cart_black"
        android:layout_alignParentRight="true"
        android:backgroundTint="#007500"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See all"
        android:id="@+id/see_all_snaks"
        android:backgroundTint="#007500"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/GrocerFood"
        android:layout_alignParentRight="true"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:layout_below="@id/popular">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@color/white">


                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:id="@+id/pinapple_iteam"
                    android:layout_marginStart="18dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-20dp"
                        android:background="@drawable/layz"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Layz"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹45.00"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:id="@+id/apple_item"
                    android:layout_marginStart="18dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-20dp"
                        android:background="@drawable/crunchi"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cheetos"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹45.00"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@color/white">


                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:id="@+id/grap_item"
                    android:layout_marginStart="18dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-20dp"
                        android:background="@drawable/kitkat"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KitKat"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹45.00"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:id="@+id/orange_item"
                    android:layout_marginStart="18dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-20dp"
                        android:background="@drawable/peppery_chips"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Peppery"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹45.00"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@color/white">


                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="18dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-20dp"
                        android:background="@drawable/red_layz"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Layz"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹45.00"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="165dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="18dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-20dp"
                        android:background="@drawable/doritos_chips"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doritos"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="35dp"
                        android:textStyle="bold"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹45.00"
                        android:textSize="25dp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"/>



                </androidx.cardview.widget.CardView>





            </LinearLayout>



        </LinearLayout>
    </ScrollView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/rounded_top_corner">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/heart_box_outline" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/notification_box" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/home_box" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/shopping_cart_box" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/profile_box" />

    </LinearLayout>



</RelativeLayout>