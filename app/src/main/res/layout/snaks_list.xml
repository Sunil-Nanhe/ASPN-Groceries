                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-25%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="125dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/kitkat"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="KIT-KAT"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="55dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="₹45.00/pack."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_marginStart="125dp"
                    android:layout_marginTop="80dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-29%"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"/>


            </androidx.cardview.widget.CardView>




        </LinearLayout>

    </ScrollView>







    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/rounded_top_corner">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/fav_btn1"
            android:background="@drawable/heart_box_outline" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/notify_btn1"
            android:layout_marginStart="25dp"
            android:background="@drawable/notification_box" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/home_btn1"
            android:layout_marginStart="25dp"
            android:background="@drawable/home_box" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/cart_btn1"
            android:layout_marginStart="25dp"
            android:background="@drawable/shopping_cart_box" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profile_btn1"
            android:layout_marginStart="25dp"
            android:background="@drawable/profile_box" />


    </LinearLayout>

</RelativeLayout>